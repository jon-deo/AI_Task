{
  "name": "sports-celebrity-reels",
  "version": "1.0.0",
  "private": true,
  "description": "AI-powered sports celebrity history reels application",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "analyze": "cross-env ANALYZE=true next build",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "db:setup": "tsx scripts/db-setup.ts",
    "db:health": "tsx scripts/db-health.ts",
    "db:seed": "tsx scripts/db-setup.ts",
    "db:reset": "prisma migrate reset --force",
    "aws:setup": "tsx scripts/setup-s3-bucket.ts",
    "aws:health": "curl -f http://localhost:3000/api/health/aws || echo 'Health check failed'",
    "ai:health": "curl -f http://localhost:3000/api/health/ai || echo 'AI health check failed'",
    "ai:test": "curl -X POST http://localhost:3000/api/health/ai/test -H 'Content-Type: application/json' -d '{\"includeScriptTest\":true,\"includeSpeechTest\":true}' || echo 'AI test failed'",
    "test:config": "tsx scripts/test-config.ts",
    "test:api": "tsx scripts/test-api-endpoints.ts",
    "test:api:prod": "API_BASE_URL=https://your-domain.com/api tsx scripts/test-api-endpoints.ts",
    "prepare": "husky install"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.478.0",
    "@aws-sdk/s3-request-presigner": "^3.478.0",
    "@hookform/resolvers": "^3.3.2",
    "@prisma/client": "^5.7.1",
    "aws-sdk": "^2.1515.0",
    "axios": "^1.6.2",
    "clsx": "^2.0.0",
    "framer-motion": "^10.16.16",
    "hls.js": "^1.4.14",
    "lucide-react": "^0.303.0",
    "next": "^14.0.4",
    "next-themes": "^0.2.1",
    "openai": "^4.20.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.48.2",
    "react-hot-toast": "^2.4.1",
    "react-intersection-observer": "^9.5.3",
    "react-use-gesture": "^9.1.3",
    "react-virtualized-auto-sizer": "^1.0.20",
    "react-window": "^1.8.8",
    "react-window-infinite-loader": "^1.0.9",
    "sharp": "^0.33.1",
    "swr": "^2.2.4",
    "tailwind-merge": "^2.2.0",
    "video.js": "^8.6.1",
    "videojs-contrib-hls": "^5.15.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^14.0.4",
    "@playwright/test": "^1.40.1",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "@testing-library/jest-dom": "^6.1.6",
    "@testing-library/react": "^14.1.2",
    "@types/lodash": "^4.17.17",
    "@types/node": "^20.10.5",
    "@types/react": "^18.3.22",
    "@types/react-dom": "^18.2.18",
    "@types/react-window": "^1.8.8",
    "@types/video.js": "^7.3.58",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "autoprefixer": "^10.4.16",
    "cross-env": "^7.0.3",
    "eslint": "^8.56.0",
    "eslint-config-next": "^14.0.4",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.0",
    "postcss": "^8.4.32",
    "prettier": "^3.1.1",
    "prettier-plugin-tailwindcss": "^0.5.9",
    "prisma": "^5.7.1",
    "tailwindcss": "^3.4.0",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
